{
  "name": "restaurant-pos",
  "version": "1.0.0",
  "description": "Professional Point of Sale System for Restaurant",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "start": "node --no-deprecation server/index.js",
    "install-all": "npm install && cd client && npm install",
    "reset-admin": "node server/reset-admin.js"
  },
  "keywords": [
    "pos",
    "restaurant",
    "point-of-sale"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "sqlite3": "^5.0.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
